 CREATE TABLE question (
id INT(6) UNSIGNED AUTO_INCREMENT PRIMARY KEY,
survey_id VARCHAR(30) NOT NULL,
type VARCHAR(30) NOT NULL,
name VARCHAR(50),
surveyId INT(6),
reg_date TIMESTAMP
);

 CREATE TABLE survey (
id INT(6) UNSIGNED AUTO_INCREMENT PRIMARY KEY,
user_id INT(6),
name VARCHAR(30) NOT NULL,
description VARCHAR(50),
enabled BOOLEAN,
reg_date TIMESTAMP
);

 CREATE TABLE answer (
id INT(6) UNSIGNED AUTO_INCREMENT PRIMARY KEY,
name VARCHAR(30) NOT NULL,
question_id INT(6),
answer_group INT(6)
);




